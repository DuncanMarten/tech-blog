{{#if posts.length}}
<section>
  <ol class="list-unstyled">
    {{#each posts as |post|}}
    <li>
      <div class="card-header">
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">{{post.title}}</a>
      </div>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
<div class="d-grid align-self end">
  <a href="/dashboard/create" class="btn btn-primary">+ New Post</a>
</div>