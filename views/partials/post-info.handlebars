<article class="post">
    <div class="card">
        <div class="title card-header">
            <a href="/post/{{id}}">{{title}}</a>
            <span class="float-end">Posted by {{user.username}} on {{format_date created_at}}</span>
        </div>
        <div class="meta card-body">
            {{content}}
        </div>
    </div>
</article>